<div class="container">
  <h1>New Post</h1>
  <% @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%=msg%></div>
  <% end %>

  <%= link_to 'Back', posts_path, class: 'btn btn-secondary btn-sm', role: "button", style: "color: white" %>
</div>