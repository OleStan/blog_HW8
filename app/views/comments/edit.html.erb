<div class="container">
  <h1 class = "text-center">Update your comment</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for([@post, @comment]) do |form| %>

        <div class="form-group">
          <%= form.label :comment %>
          <%= form.text_area(:body,  cols: 10, rows: 10, class: 'form-control')%>
        </div>

        <div class="form-group" style="display: none">
          <%= form.label :status %><br>
          <%=form.text_field(:author, value:@comment.status,
                             id: "comment_status", name: "comment[status]", style: "visibility:hidden")%>
        </div>

        <div class="form-group" style="display: none">
          <%= form.label :status %><br>
          <%=form.text_field(:edited, value:true,
                             id: "comment_edited", name: "comment[edited]", style: "visibility:hidden")%>
        </div>

        <%= form.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back to post", post_path(@post) %>
    </div>
  </div>
</div>